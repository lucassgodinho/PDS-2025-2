<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/app_bar_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:elevation="4dp"
        android:background="@color/white"
        android:id="@+id/app_bar_default"/>




    <LinearLayout
        android:id="@+id/status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_below="@id/app_bar_default">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="70dp"
                android:background="@drawable/rounded_rectangle_red"/>


            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="160dp"
                android:background="@drawable/rounded_rectangle_green" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="Pendentes" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="Finalizados" />
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_container"
        android:layout_above="@id/end_bar"
        android:padding="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewDenuncias"
            android:layout_width="match_parent"
            android:layout_height="580dp"
            android:layout_marginBottom="7dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <Button
            android:id="@+id/btnAdicionarDenuncia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:padding="4dp"
            android:textSize="50dp"
            android:textColor="@color/white"
            android:elevation="15dp"
            android:drawablePadding="8dp"
            android:textAllCaps="false"
            android:background="@drawable/rounded_rectangle_yyellow"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="16dp"/>
    </RelativeLayout>



    <include
        layout="@layout/end_bar"
        android:id="@+id/end_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:elevation="4dp"
        android:background="@drawable/recylcer_button_navigation"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>

