<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/buttonLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="8dp"
            android:background="@drawable/icon_retornar"
            android:text="Já tem uma conta? Faça Login"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:text="Editar informações"
            android:textColor="@color/cinza"
            android:textSize="24sp" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:text="Digite seu novo Nome "
            android:textSize="16sp"
            android:textColor="@color/cinza"/>

        <EditText
            android:id="@+id/editTextNome"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_rectangle_yellow"
            android:hint="Nome"
            android:paddingStart="16dp"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/edittext"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:text="Digite sua nova Cidade"
            android:textSize="16sp"
            android:textColor="@color/cinza"/>

        <EditText
            android:id="@+id/editTextCidade"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_rectangle_yellow"
            android:hint="Cidade"
            android:paddingStart="16dp"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/edittext"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:text="Digite seu novo Email"
            android:textSize="16sp"
            android:textColor="@color/cinza"/>

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_rectangle_yellow"
            android:hint="E-mail"
            android:layout_marginTop="15dp"
            android:paddingStart="16dp"
            android:textColorHint="@color/edittext" />

        <Button
            android:id="@+id/button_update_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_rectangle_yellow"
            android:text="Trocar foto de perfil"
            android:textSize="20dp"
            android:textAllCaps="false"

            />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/rounded_rectangle_green"
            android:text="Salvar"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_gravity="right"
            />

    </LinearLayout>
</ScrollView>
