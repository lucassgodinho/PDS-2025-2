<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/circle_notification"
    android:padding="20dp"
    android:elevation="8dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">

        <TextView
            android:id="@+id/tvRua"
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:text="Rua:"
            android:textColor="@android:color/black"
            />


        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Status"
            android:textColor="@android:color/black"
            android:layout_marginStart="90dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:gravity="start">
    <TextView
        android:id="@+id/tvBairro"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:text="Bairro:"
        android:textColor="@android:color/black" />
        <View
            android:id="@+id/tvStatusColor"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="101dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvCidade"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginTop="3dp"
        android:text="Cidade:"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/tvProblema"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:text="Problema:"
        android:layout_marginTop="3dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/tvDescricao"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="Descrição:"
        android:layout_marginTop="3dp"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/tvDataHora"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="3dp"
        android:text="Data e Hora:"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/tvImagem"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop" />
</LinearLayout>
