<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/recycler_background"
    android:padding="20dp"
    android:elevation="8dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">

        <TextView
            android:id="@+id/tvCidade"
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:text="Cidade:"
            android:textColor="@android:color/white"
            />

        <View
            android:id="@+id/tvStatusColor"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Em Andamento"
            android:textColor="@android:color/white"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvBairro"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:text="Bairro:"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvTipoManutencao"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Tipo Manutenção:"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvDataHora"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Data e Hora:"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvDescricao"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Descrição:"

        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvLocalizacao"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/tvImagem"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop" />
</LinearLayout>
