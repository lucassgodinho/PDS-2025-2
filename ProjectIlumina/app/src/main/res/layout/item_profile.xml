<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza_claro"
    android:gravity="clip_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageProfile"
        android:layout_width="265dp"
        android:layout_height="161dp"
        android:layout_gravity="center"
        android:src="@drawable/foto_perfil" />


    <TextView
        android:id="@+id/textNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="8dp"
        android:text="Nome:"
        android:textColor="@color/cinza"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textCidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Cidade:  "
        android:textColor="@color/cinza"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Email: "
        android:textColor="@color/cinza"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_profile_editar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Editar informações"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <ImageButton
            android:id="@+id/button_edit_profile"
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:layout_marginStart="155dp"
            android:src="@drawable/icon_flecha" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:background="@drawable/icon_lixeira" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Excluir conta"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <ImageButton
            android:id="@+id/button_excluir_conta"
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:layout_marginStart="200dp"
            android:src="@drawable/icon_flecha" />
    </LinearLayout>

    <Button
        android:id="@+id/sair_conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="25dp"
        android:text="Sair da conta"
        android:textColor="@color/red_delet"
        android:background="@android:color/transparent"
        android:textSize="16dp"
        android:textAllCaps="false"/>


</LinearLayout>