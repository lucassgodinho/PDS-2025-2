<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/circle_feed"
    android:elevation="8dp"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/header_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_feed_profile"
            android:contentDescription="Foto de perfil"
            android:background="@drawable/icon_feed_profile"
            android:padding="4dp" />

        <TextView
            android:id="@+id/name_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Lucas Santana, Torres"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000" />
    </LinearLayout>


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_feed"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/poste_sem_iluminacao"
        app:layout_constraintTop_toBottomOf="@id/header_feed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedImage" />


    <LinearLayout
        android:id="@+id/descricao_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#FFE082"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/image_feed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Falta Iluminação pública\nPoste com luz queimada causando insegurança.\nRua Ulbra, 920"
            android:textColor="#000"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/like_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/descricao_box"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/icon_like"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_like_off"
            android:contentDescription="Botão de curtir"
            android:layout_marginEnd="6dp"/>


        <TextView
            android:id="@+id/text_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 likes"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>



    <TextView
        android:id="@+id/tvComentarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comentários:"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/like_section"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/comentario_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/cinza_feed"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvComentarios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/edtComentario"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Digite seu comentário..."
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/btnEnviar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_button_enter"
            android:contentDescription="Enviar comentário" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_comentarios_box"
        android:layout_width="356dp"
        android:layout_height="113dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comentario_box">

        <include
            android:id="@+id/item_comentarios"
            layout="@layout/item_comentarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@id/comentario_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
