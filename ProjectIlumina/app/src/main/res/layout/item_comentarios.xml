<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_feed_profile"
            android:contentDescription="Foto de perfil"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/name_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lucas Santana, Torres"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/comentarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/header_feed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/et_comentario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="comentário"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/button_excluir_comentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_lixeira"
            android:contentDescription="Excluir comentário"
            android:layout_marginStart="8dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
